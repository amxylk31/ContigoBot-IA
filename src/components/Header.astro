---
import { Image } from 'astro:assets'
import logo from '../../public/logo.png'
import 'bootstrap/dist/css/bootstrap.css'
const { texto1, texto2, texto3, link1, link2, link3} = Astro.props
---

<header class="header">
  <div class="header_pag">
    <a href="/">
      <Image src={logo} alt="Logo" class="logo" />
    </a>
    <p class="nom_pag">CONTIGOBOT</p>
    <nav class="navegador">
      <a href={link1} data-tour="register-link">{texto1}</a>
      <a href={link2} data-tour="signin-link">{texto2}</a>
      <a href={link3} data-tour="terms-link">{texto3}</a>
    </nav>
  </div>
</header>
<style>
  .header {
    margin-bottom: 10vh; /* Ajustamos el margen inferior del encabezado */
  }

  .header_pag {
    background-color: rgb(247, 223, 188);
    transition: background-color 0.8s ease;
  }

  .header_pag {
    width: 100%;
    height: 10vh;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 10px 20px;
    position: fixed;
    top: 0;
    z-index: 1000;
  }

  .navegador {
    margin-left: auto;
  }

  .navegador a {
    color: rgb(0, 0, 0);
    text-decoration: none;
    padding: 15px;
    margin-right: 20px;
    border: 2px solid transparent;
    border-radius: 5px;
    transition: border-color 0.3s;
    font-family: 'Outfit Variable', sans-serif;
  }

  .navegador a:hover {
    border-color: white; /* Cambia el color del borde a blanco en el hover */
  }

  .nom_pag {
    color: rgb(0, 0, 0);
    font-size: 20px;
    position: relative;
    left: 10px;
    top: 10px;
    font-weight: bold;
    font-family: 'Outfit Variable', sans-serif;
  }

  .logo {
    width: 7vh;
    height: 7vh;
  }
</style>
